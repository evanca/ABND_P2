<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorButtonNormal">#77B7F0</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/normal_margin_16dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">@dimen/title_text</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/icon_height_75dp</item>
        <item name="android:layout_marginTop">@dimen/normal_margin_16dp</item>
    </style>

    <style name="milliliters">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/maxi_text</item>
    </style>

    <style name="normal_drink">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/mini_margin_8dp</item>
        <item name="android:layout_marginEnd">@dimen/small_margin_10dp</item>
        <item name="android:layout_marginStart">@dimen/small_margin_10dp</item>
        <item name="android:layout_marginTop">@dimen/top_button_margin_18dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="medium_large_drink">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/mini_margin_8dp</item>
        <item name="android:layout_marginEnd">@dimen/small_margin_10dp</item>
        <item name="android:layout_marginStart">@dimen/small_margin_10dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="column">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingEnd">@dimen/large_padding_24dp</item>
        <item name="android:paddingStart">@dimen/large_padding_24dp</item>
    </style>

</resources>

